.body{
  display: flex;
  justify-content: flex-start;
  align-items: center;
  flex-direction: column;
  background: #f3f3f3;
  text-align: center;
  height: 100vh;
  width: 100%;
}


.topView{
  display: flex;
  background: #696;
  width: 100%;
  height: 200rpx;
  justify-content: flex-start;
  align-items: center;
  flex-direction: row;
}


.avatar{
  margin-left: 40rpx;
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  box-sizing: border-box;
  background: #fff;
}

.nameView{
display: flex;
flex-direction: column;
justify-content: center;
align-items: flex-start;
width: 40%;
height: 140rpx;
margin-left: 40rpx;
}



.nameViewMid{
  width: 100%;
  height: 40rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  line-height: 40rpx;

}


.sheld{
  width: 24rpx;
  height: 24rpx;
  line-height: 60rpx;
}



.nickName{
  width: 100%;
  color: #fff;
  font-size: 32rpx;
  font-weight:  blod;
  text-align: left;
  line-height: 60rpx;
  height: 60rpx;
}


.authInfo{
  width: 100%;
  height: 100%;
  color: #ddd;
  text-align: left;
  font-size: 26rpx;
  line-height: 40rpx;
  margin-left: 10rpx;
}

.jindou{
  width: 100%;
  height: 40rpx;
  color: #ddd;
  text-align: left;
  font-size: 26rpx;
  line-height: 40rpx;

}

