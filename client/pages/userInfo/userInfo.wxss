.refreshView{
  display: flex;
  flex-direction: column;
  width: 25%;
  height: 200rpx;
  justify-content: center;
  align-items: center;
  align-self: flex-end;
}


#refreshBtn{
  height: 66rpx;
  width: 80%;
  background: #fff;
  color: #696;
  font-size: 40rpx bold;
  line-height: 66rpx;
}

#refreshBtn::after{border: none;}

#refreshBtn[disabled]{
  background: #999;
  color: #fff;
}

.refreshTimes{
  margin-top: 10rpx;
  color: #bbb;
  font-size: 20rpx;
  text-align: center;
}

.func_image{
  width: 100%;
  height: 300rpx;
  display: block;
}

.imageView{
  margin-bottom: 40rpx;
  margin-top: 40rpx;
  height:300rpx;
  width: 100%;
}

.textViewClose{
  height: 60rpx;
  width: 100%;
  text-align: center;
  color: #991111;
  font-size: 40rpx;
}

.textViewOpen{
  height: 60rpx;
  width: 100%;
  text-align: center;
  color: #669966;
  font-size: 40rpx;
}


.cell {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  color: #696;
  font: 34rpx caption ;
  width: 100%;
  height: 100rpx;
  border-bottom-color: #d4d4d4;
  border-bottom: 2rpx solid;
}

.detailimage{
  height: 40rpx;
  width: 40rpx;
  margin-right: 40rpx;
}

.cellLabel{
  width: 85%;
  height: 100rpx;
  padding-left: 30rpx;
  line-height: 100rpx;
  text-align: left;
}
.line{
  background: #d4d4d4;
  height: 10rpx;
  width: 100%;
}