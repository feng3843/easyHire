.AuthBtnView{
  justify-content: center;
  align-items: center;
  display: flex;
  flex-direction: row;
}


.AuthBtn{
  height: 200rpx;
  width: 200rpx;
  border-radius: 50%;
  overflow:hidden;
  line-height: 200rpx;
  margin: 40rpx;
  background: #696;
  font-size: 32rpx;
  color: #fff;
  justify-content: center;
  align-items: center;
  display: flex;
  flex-direction: row;
}

.warnImg{
  width: 32rpx;
  height: 32rpx;
}

