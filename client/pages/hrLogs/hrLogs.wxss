/* pages/hrLogs/hrLogs.wxss */

.body{
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: flex-start;
  align-items: flex-start;
  background: #f3f3f3;
  flex-direction: column;
  position: relative;
}

.noLogs{
  width: 60%;
  height: 400rpx;
  position: absolute;
  top: 150rpx;
  left: 20%;
}

.bigTitle{
  width: 100%;
  font-size: 50rpx;
  font-weight: bold;
  color: #999;
  line-height: 50rpx;
  text-align: center;
}

.tips{
  margin-top: 50rpx;
  width: 100%;
  font-size: 20rpx;
  color: #999;
  line-height: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
}

text{
  margin-bottom: 15rpx;
}


#smallTitle{
  font-size: 24rpx;
  color: #999;
  margin-bottom:0rpx;
}

#name{
  margin-left: 10rpx;
  font-size: 30rpx;
  color: #696;
  margin-bottom:0rpx;
}

#time{
  margin-left: 10rpx;
  font-size:36rpx;
  margin-bottom:0rpx;
}

.cell{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
  width: 92%;
  margin-left: 30rpx;
  margin-right: 30rpx;
  margin-bottom: 10rpx;
  margin-top: 10rpx;
  height: 140rpx;
  box-shadow:  5rpx 5rpx 5rpx #696;
  border-radius: 5rpx;
  background: #fff;
  color: #999;
  overflow: hidden;
}