/* pages/recharge/recharge.wxss */

.body{
  width: 100%;
  height: 100vh;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-content: flex-start;
  flex-wrap: wrap;
  color: #777;
  font-size: 28rpx;
  font-weight: bold;
}
.pdcell{
  margin: 22rpx;
  width: 40%;
  height: 440rpx;
  background: #ddd;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-content: center;
}


.gold{
  width: 150rpx;
  height: 150rpx;
  align-self: center;
}
.description{
  height: 70rpx;
  text-align: left;
  margin-left: 15rpx;
  margin-right: 15rpx;
  margin-top: 15rpx;
}

.old{
    margin-top: 15rpx;
   text-decoration: line-through;
   text-decoration-style:solid;
   color: red;
   text-align: center;
}

.fee{
  width: 100%;
  height: 35rpx;
  text-align: center;
  color: #777;
}

.buy{
  margin-top: 25rpx;
  width: 80%;
  height: 50rpx;
  line-height: 50rpx;
  background: #696;
  color: #fff;
  font-size: 30rpx;
  font-weight: bold;
  border-radius: 5rpx;
}